{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "thm_rmt:claim_flag",
      "materials": { "default": "entity_alphatest" },
      "geometry": { "default": "geometry.thm_rmt_claim_flag" },
      "textures": { 
        "default": "textures/thm/rmt/entities/claim_flag",
        "red": "textures/thm/rmt/entities/claim_flag_red"
        },
      "scripts": {
        "initialize":[
          "v.rot = 0;"
        ],
        "pre_animation":[
          "v.rot = q.property('thm_rmt:rot');"
        ],
        "animate": [{ "place": "query.is_alive" }, "rot"]
      },
      "animations": {
        "rot": "animation.thm_rmt_claim_flag.rot",
        "place": "animation.thm_rmt_claim_flag.place"
      },
      "render_controllers": ["controller.render.thm_rmt.claim_flag"]
    }
  }
}
